#!/usr/bin/python3
"""Module that factorizes numbers into a product of two smaller numbers."""

from sys import argv


def factorize(value):
    """Print a simple decomposition of an integer > 1."""
    if value < 2:
        return

    i = 2
    while value % i:
        i += 1

    print(f"{value} = {value // i} * {i}")


def main():
    """Main function to factorize numbers from a file."""
    if len(argv) != 2:
        print("Usage: {} <file>".format(argv[0]))
        exit(1)

    filename = argv[1]

    try:
        with open(filename) as file:
            for line in file:
                value = int(line.strip())
                factorize(value)
    except FileNotFoundError:
        print(f"Error: File '{filename}' not found.")
    except ValueError:
        print(f"Error: Invalid integer in '{filename}'.")

if __name__ == "__main__":
    main()
